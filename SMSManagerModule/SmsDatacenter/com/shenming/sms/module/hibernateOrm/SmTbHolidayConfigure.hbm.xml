        name="holidayDate"
        type="date"
        column="holiday_date"
        length="10"
    />
    <property
        name="holidayDescription"
        type="string"
        column="holiday_description"
        length="400"
    />
    <property
        name="holidayName"
        type="string"
        column="holiday_name"
        length="20"
